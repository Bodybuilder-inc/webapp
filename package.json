{
  "name": "bodybuilder",
  "version": "0.0.0-development",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "check:integrity": "yarn check --integrity && cd ./pages && yarn check --integrity",
    "lint": "next lint --fix --ext js,jsx,ts,tsx .",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx}\"",
    "unit:test": "cd ./pages && jest --testPathPattern \"test.(ts|tsx)\" --verbose",
    "unit:test:husky": "cd ./pages && jest --bail --testPathPattern \"test.(ts|tsx)\" --verbose",
    "unit:test:coverage": "cd ./pages && yarn test:coverage",
    "e2e:test": "yarn cypress run",
    "e2e:test:interactive": "yarn cypress open",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@types/jest": "^27.0.2",
    "@vtex/tsconfig": "^0.6.0",
    "cypress": "^8.6.0",
    "jest": "^27.3.1",
    "mocha": "^9.1.3",
    "next": "11.1.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "sass": "^1.43.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn check:integrity && yarn lint && yarn format",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-push": "yarn unit:test:husky"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@testing-library/react": "^12.1.2",
    "@types/react": "^17.0.33",
    "@typescript-eslint/parser": "^5.1.0",
    "@vtex/prettier-config": "^0.3.6",
    "commitizen": "^4.2.4",
    "cypress": "^8.6.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-vtex": "^14.1.1",
    "eslint-config-vtex-react": "^8.2.0",
    "husky": "4",
    "prettier": "^2.4.1",
    "semantic-release": "^17.0.4",
    "typescript": "4.4.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
